	private static String StringReplace(String text)
	{
		text.toLowerCase();
		char[] temp = text.toCharArray();
		
		for(int i = 0; i<temp.length;i++)
		{
			if(temp[i] == 'a')
				temp[i] = '2';
			else if(temp[i] == 'u')
				temp[i] = '7';
		}
		
		text = temp.toString();
		
		return new String(temp);
	}



